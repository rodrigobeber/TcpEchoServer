{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Echo Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/echo-server",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}